<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- background -->
    <style name="Background">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Background.Oneline">
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Background.Oneline.TopBar">
        <item name="android:background">@drawable/color_homepage_topbar_black</item>
    </style>

    <style name="Background.Body">
        <item name="android:background">@color/gray_backgroud</item>
    </style>

    <style name="Background.MidBar">
        <item name="android:background">@drawable/color_homepage_midbar_green</item>
    </style>
    <!-- button -->
    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Button.MarginLeft">
        <item name="android:layout_marginLeft">150dp</item>
    </style>

    <!-- textview -->
    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextView.Title">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="TextView.MidTitle">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <!-- editText -->
    <style name="EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="EditText.Marginleft">
        <item name="android:layout_marginLeft">25dp</item>
        <item name="android:minWidth">150dp</item>
    </style>

    <!-- spinner -->
    <style name="Spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Spinner.Short"></style>

    <!-- GridView -->
    <style name="GridView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="GridView.personDis">
        <item name="android:background">@color/gray_grid_line</item>
        <item name="android:numColumns">2</item>
        <item name="android:verticalSpacing">1dp</item>
        <item name="android:horizontalSpacing">1dp</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:gravity">fill_vertical</item>
    </style>

</resources>